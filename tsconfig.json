{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "noEmitHelpers": true,
    "paths": {
      "@/*": ["src/*"],
      "@package/*": ["src/package/*"]
    }
  },
  "include": ["src", "dist/types"],
  "exclude": ["dist"]
}
